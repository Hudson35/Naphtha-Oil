<% include partials/header %>
<%# shows detail of quote %>
<div class="ui main text container segment" id="container">
    <div class="ui huge header" style="text-align: center;">Quote Details</div>
    <form class="ui form" action="/clients/home/fuelQuoteInfo" method="POST" autocomplete="off">
        <%# quantity of fuel(gallons) %>
        <div class="field">
            <label for="quote[gallons]">Quantity (Gallons)</label>
            <input type="number" name="quote[gallons]" placeholder="0" id="gallons" value="<%=quote.gallons%>" readonly required>
        </div>
        <%# address from profile %>
        <div class="field">
            <label for="quote[address]">Delivery Address</label>
            <input type="text" name="quote[address]" value="<%=client.address.street%>, <%=client.address.city%>, <%=client.address.state%>, <%=client.address.zipcode%>" id="address" readonly>
        </div>
        <%# delivery date and pick up %>
        <div class="fields">
            <div class="eight wide field">
                <label for="quote[orderdate]">Date of Order </label>
                <input type="text" name="quote[orderdate]" id="orderdate" value="<%=quote.orderdate%>" readonly required>                
            </div>
            <div class="eight wide field">
                <label for="quote[delivery]">Date of Delivery</label>
                <input type="text" name="quote[deliverydate]" value="<%=quote.deliverydate%>" readonly required>                
            </div>
        </div>
        <%# prices %>
        <div class="fields">
            <div class="eight wide field">
                <label for="quote[suggested]">Suggested Price Per Gallon</label>
                <input type="text" name="quote[suggested]" id="suggprice" value="<%=quote.suggestedPrice%>" readonly required>
            </div> 
            <div class="eight wide field">
                <label for="quote[total]">Total Amount</label>
                <input type="text" name="quote[total]" id="totalprice" value="<%=quote.total%>" readonly required>
            </div>
        </div>
        <%# Buttons %>
		<div style="text-align: center;">
        <div class="ui buttons">
        <button type="submit" class="ui grey basic button">Submit Quote</button>
        <div class="or"></div>
        <a href="/clients/home/fuelQuoteForm" class="ui black button">Edit Quote</a>
    </div>
		</div>
    </form>
</div>

<% include partials/footer %>